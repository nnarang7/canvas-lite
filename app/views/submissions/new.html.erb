<div class="row">
  	<div class="col-lg-12">
    	<div class="panel panel-default">
      		<div class="panel-heading">New Submission for <%= link_to @assignment.name, @assignment %></div>
				<div class="panel-body">
				  <div class="col-md-6">
					<%= form_for @submission, html: { multipart: true } do |f| %>
						<div class="form-group">
							<div class="field">
					  			<%= f.label :name %>
					  			<%= f.text_field :name %>
					  		</div>
					  		<div class="field">
					  			<%= f.label :attachment %>
					  			<%= f.file_field :attachment %>
					  		</div>
					  		<%= f.hidden_field :user_id, :value => @student.id %>
					  		<%= f.hidden_field :assignment_id, :value => @assignment.id %>
					  		<%= f.submit "Save", class: "btn btn-primary" %>
					  	</div>
					  </div>
					</div>
			  	</div>
			  </div>
			</div>					
					<% end %>
