<h1>New Submission for <%= link_to @assignment.name, @assignment %></h1>

<%= form_for @submission, html: { multipart: true } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :attachment %>
  <%= f.file_field :attachment %>
  <%= f.hidden_field :user_id, :value => @student.id %>
  <%= f.hidden_field :assignment_id, :value => @assignment.id %>
  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>
