<p id="notice"><%= notice %></p>

<h1>My Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Professor</th>
      <th>Location</th>
      <th>Weekdays</th>
      <th>Starting Time</th>
      <th>Ending Time</th>
      <th>More Details</th>
      <th>Enrollment Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.professor %></td>
        <td><%= course.location %></td>
        <td>
          <% if course.monday %> 
            Monday,
          <% end %>
          <% if course.tuesday %> 
            Tuesday,
          <% end %>
          <% if course.wednesday %> 
            Wednesday,
          <% end %>
          <% if course.thursday %> 
            Thursday,
          <% end %>
          <% if course.friday %> 
            Friday,
          <% end %>
          <% if course.saturday %> 
            Saturday,
          <% end %>
          <% if course.sunday %> 
            Sunday
          <% end %>     
        </td>      
        <td><%= course.starting_time.strftime("%I:%M%p") %></td>
        <td><%= course.ending_time.strftime("%I:%M%p") %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Un-enroll', unenroll_course_path(:id => course.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Browse Course Listings', courses_path %>
