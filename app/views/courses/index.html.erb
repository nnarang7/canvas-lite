<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Professor</th>
      <th>Location</th>
      <th>Weekdays</th>
      <th>Starting Time</th>
      <th>Ending Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.professor %></td>
        <td><%= course.location %></td>
        <td>
          <% if course.monday %> 
            Monday,
          <% end %>
          <% if course.tuesday %> 
            Tuesday,
          <% end %>
          <% if course.wednesday %> 
            Wednesday,
          <% end %>
          <% if course.thursday %> 
            Thursday,
          <% end %>
          <% if course.friday %> 
            Friday,
          <% end %>
          <% if course.saturday %> 
            Saturday,
          <% end %>
          <% if course.sunday %> 
            Sunday
          <% end %>     
        </td>      
        <td><%= course.starting_time.strftime("%I:%M%p") %></td>
        <td><%= course.ending_time.strftime("%I:%M%p") %></td>
        <td><%= link_to 'Show', course %></td>
        <% if admin %>
          <td><%= link_to 'Edit', edit_course_path(course) %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if admin %>
  <%= link_to 'New Course', new_course_path %>
<% end %>
