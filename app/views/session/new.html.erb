<html>
  <head>
    <title>CanvasLite| Home </title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <script src="https://use.fontawesome.com/668689cd0f.js"></script> <!-- load fontawesome -->
    <link href="https://fonts.googleapis.com/css?family=Asar" rel="stylesheet"> <!-- load font -->
  </head>
	<body style="overflow: hidden">
		<div class="login">
			<h1 id="log_in">Log In</h1>
			<div id="login-form">
				<%= form_tag(login_path, :method=>'post') do %>
				  <%= label_tag :name %><br>
				  <%= text_field_tag :name %>
				  <br>
				  <%= label_tag :password %><br>
				  <%= password_field_tag :password %>
				  <br><br>
				  <%= submit_tag 'Log in' %>
				<% end %>
			</div>
		</div>
  </body>
</html>		